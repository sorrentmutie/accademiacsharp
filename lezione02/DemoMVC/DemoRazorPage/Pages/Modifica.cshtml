@page "{id:int?}"
@model DemoRazorPage.Pages.ModificaModel



<h3>Modifica il  Ristorante @Model.Restaurant.RestaurantName</h3>
<a asp-page="Ristoranti" class="btn btn-primary btn-large">Torna indietro</a>


<form method="post">        
    <input asp-for="Restaurant.RestaurantId" type="hidden" value="@Model.Restaurant.RestaurantId" />
    <div asp-validation-summary="All" class="text text-danger"></div>

    <div class="form-group">
        <label asp-for="Restaurant.RestaurantName">Nome</label>
        <input asp-for="Restaurant.RestaurantName" class="form-control"/>
        <span asp-validation-for="Restaurant.RestaurantName" class="text text-danger"></span>
    </div>

     <div class="form-group">
        <label asp-for="Restaurant.Address">Indirizzo</label>
        <input asp-for="Restaurant.Address" class="form-control"/>
        <span asp-validation-for="Restaurant.Address" class="text text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" class="btn-primary btn" value="OK"/>
    </div>
</form>
