@page
@model DemoRazorPage.Pages.RistorantiModel

@if(Model.ShowMessage){
    <div class="alert alert-info">
        @Model.Messaggio
    </div>
}

@if (Model.HasRestaurants)
{
    <h3>Ristoranti: @Model.Restaurants.Restaurants.Count</h3>
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(r => r.Restaurants.Restaurants[0].RestaurantName)</th>
                <th>Address</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var restaurant in @Model.Restaurants.Restaurants)
            {
                <tr>
                    <td>@restaurant.RestaurantName</td>
                    <td>@restaurant.Address</td>
                    <td>
                        <a asp-page="Modifica" asp-route-id="@restaurant.RestaurantId" class="btn btn-warning"> Modifica</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

} else
{
    <h3 class="text text-danger">Non ci sono ristoranti</h3>
}


<a asp-page="Nuovo" class="btn btn-large btn-info">Aggiungi Un ristorante</a>

